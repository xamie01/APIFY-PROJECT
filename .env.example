# ============================================
# O-SATE Configuration
# ============================================

# -------- AI Provider API Keys --------
# At least one API key is required

# OpenRouter (RECOMMENDED - Free tier available)
# Get your free key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# OpenAI (Optional)
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic (Optional)
# Get key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google Gemini (Optional)
# Get key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# -------- Default Settings --------
# Default AI provider: openrouter, openai, anthropic, gemini
DEFAULT_PROVIDER=openrouter

# Default model (OpenRouter format: org/model-name)
DEFAULT_MODEL=moonshotai/kimi-linear-48b-a3b-instruct

# -------- Testing Configuration --------
# Maximum prompts to run per test session
MAX_PROMPTS=180

# Concurrent API requests (increase for faster testing)
CONCURRENCY=4

# Request timeout in seconds
REQUEST_TIMEOUT=60

# Retry attempts on failure
MAX_RETRIES=3

# -------- Flask Web UI (Optional) --------
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# -------- Logging --------
LOG_LEVEL=INFO
LOG_FILE=logs/osate.log

# -------- Sandbox (Docker - Optional) --------
SANDBOX_TIMEOUT=300
SANDBOX_MEMORY_LIMIT=2g
SANDBOX_CPU_LIMIT=1.0

# -------- Debug Mode --------
DEBUG_MODE=false
