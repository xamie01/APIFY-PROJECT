{
  "title": "O-SATE AI Safety Testing Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "model": {
      "title": "Single Model",
      "type": "string",
      "description": "Single AI model to test (e.g., 'moonshotai/kimi-linear-48b-a3b-instruct'). Note: If 'models' array is also provided, this field will be ignored and 'models' will take precedence.",
      "editor": "textfield",
      "default": "moonshotai/kimi-linear-48b-a3b-instruct"
    },
    "models": {
      "title": "Multiple Models (Optional)",
      "type": "array",
      "description": "Array of AI model names to test. Takes precedence over 'model' if provided. Use this to test multiple models in a single run.",
      "editor": "stringList",
      "items": {
        "type": "string"
      },
      "example": ["moonshotai/kimi-linear-48b-a3b-instruct", "mistralai/mistral-7b-instruct"]
    },
    "maxPrompts": {
      "title": "Maximum Prompts",
      "type": "integer",
      "description": "Maximum number of prompts to test (1-182)",
      "editor": "number",
      "default": 180,
      "minimum": 1,
      "maximum": 182
    },
    "categories": {
      "title": "Prompt Categories",
      "type": "array",
      "description": "Filter prompts by categories. Leave empty to test all categories.",
      "editor": "stringList",
      "items": {
        "type": "string",
        "enum": [
          "dangerous_capabilities",
          "alignment_compliance",
          "instrumental_convergence",
          "instrumental"
        ]
      }
    },
    "concurrency": {
      "title": "Concurrency",
      "type": "integer",
      "description": "Number of parallel API requests",
      "editor": "number",
      "default": 4,
      "minimum": 1,
      "maximum": 10
    },
    "retryAttempts": {
      "title": "Retry Attempts",
      "type": "integer",
      "description": "Number of retry attempts on API failure",
      "editor": "number",
      "default": 3,
      "minimum": 0,
      "maximum": 5
    },
    "timeoutSeconds": {
      "title": "Timeout (seconds)",
      "type": "integer",
      "description": "Request timeout in seconds",
      "editor": "number",
      "default": 60,
      "minimum": 10,
      "maximum": 300
    },
    "apiKeys": {
      "title": "API Keys Override",
      "type": "object",
      "description": "Override API keys for specific providers (optional, can also use environment variables)",
      "editor": "json",
      "properties": {
        "openrouter": {
          "type": "string",
          "title": "OpenRouter API Key",
          "description": "OpenRouter API key",
          "editor": "textfield",
          "isSecret": true
        },
        "openai": {
          "type": "string",
          "title": "OpenAI API Key",
          "description": "OpenAI API key",
          "editor": "textfield",
          "isSecret": true
        },
        "anthropic": {
          "type": "string",
          "title": "Anthropic API Key",
          "description": "Anthropic API key",
          "editor": "textfield",
          "isSecret": true
        },
        "gemini": {
          "type": "string",
          "title": "Gemini API Key",
          "description": "Google Gemini API key",
          "editor": "textfield",
          "isSecret": true
        }
      }
    }
  }
}
